{
    "name": "meanjs-template",
    "description": "MEANJS Template",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "grunt",

        "build": "grunt build",
        "production": "NODE_ENV=production node server.js",

        "test": "grunt test",
        "test-server-watch": "NODE_ENV=test jasmine-node --test-dir test/server --matchall --color --autotest --watch app",
        "test-client-watch": "NODE_ENV=test ./node_modules/karma/bin/karma start karma.conf.js",
        "ci": "CI=true grunt ci",
        "update-webdriver": "./node_modules/.bin/webdriver-manager update",
        "protractor": "./node_modules/.bin/protractor protractor-conf.js",

        "postinstall": "npm rebuild; npm run update-webdriver; bower install --config.interactive=false --allow-root"
    },
    "dependencies": {
        "async": "~0.9.0",
        "bluebird": "~2.3.11",
        "body-parser": "~1.6.5",
        "compression": "~1.0.11",
        "consolidate": "~0.10.0",
        "cookie-session": "~1.0.2",
        "debug": "~2.0.0",
        "express": "~4.8.5",
        "git-rev-sync": "~1.0.0",
        "glob": "~4.0.5",
        "helmet": "~0.4.0",
        "lodash": "~2.4.1",
        "mongoose": "~3.8.15",
        "morgan": "~1.2.3",
        "passport": "~0.2.0",
        "request": "~2.40.0",
        "swig": "~1.4.2"
    },
    "devDependencies": {
        "autoprefixer-core": "~3.1.2",
        "bower": "~1.3.9",
        "grunt": "~0.4.5",
        "grunt-angular-templates": "~0.5.7",
        "grunt-cli": "~0.1.13",
        "grunt-concurrent": "~0.5.0",
        "grunt-contrib-concat": "~0.5.0",
        "grunt-contrib-cssmin": "~0.10.0",
        "grunt-contrib-jshint": "~0.10.0",
        "grunt-contrib-uglify": "~0.5.1",
        "grunt-contrib-watch": "~0.6.1",
        "grunt-env": "~0.4.1",
        "grunt-jasmine-node": "~0.2.1",
        "grunt-karma": "~0.8.3",
        "grunt-nodemon": "~0.3.0",
        "grunt-postcss": "~0.1.0",
        "grunt-protractor-runner": "~1.1.0",
        "grunt-sass": "~0.18.0",
        "grunt-scss-lint": "~0.3.4",
        "jasmine-node": "~1.14.5",
        "jasmine-reporters": "~1.0.1",
        "karma": "~0.12.21",
        "karma-chrome-launcher": "~0.1.4",
        "karma-firefox-launcher": "~0.1.3",
        "karma-jasmine": "~0.1.5",
        "karma-junit-reporter": "~0.2.2",
        "karma-phantomjs-launcher": "~0.1.4",
        "load-grunt-tasks": "~0.6.0",
        "nodemon": "~1.2.1",
        "protractor": "~1.5.0",
        "rewire": "~2.1.0"
    }
}
